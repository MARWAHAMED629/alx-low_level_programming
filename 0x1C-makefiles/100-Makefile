CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@ -Wall -Werror -Wextra -pedantic

clean:
	$(RM) *~ *.o

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

# Check for missing m.h header file
$(OBJ): m.h
